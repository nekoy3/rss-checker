@bot.tree.command(name="blog_review", description="è¨˜äº‹ã®è«–ç†å±•é–‹ã¨åˆ†ã‹ã‚Šã‚„ã™ã•ã‚’AIãŒãƒ¬ãƒ“ãƒ¥ãƒ¼")
async def blog_review(interaction: discord.Interaction, article_text: str):
    """
    è¨˜äº‹å†…å®¹ã‚’AIãŒãƒ¬ãƒ“ãƒ¥ãƒ¼ã—ã¦æ”¹å–„ææ¡ˆã‚’è¿”ã™
    è«–ç†å±•é–‹ã®æ­£ã—ã•ã¨åˆå¿ƒè€…ã¸ã®åˆ†ã‹ã‚Šã‚„ã™ã•ã‚’é‡ç‚¹çš„ã«ãƒã‚§ãƒƒã‚¯
    """
    await interaction.response.defer(thinking=True)
    
    try:
        logger.info(f"Article review requested by {interaction.user.name}")
        
        # Generate review using AI
        review_result = ai_suggester.generate_article_review(article_text)
        
        # Split into chunks if too long (Discord limit: 2000 chars per message)
        if len(review_result) > 1900:
            # Send first part as response
            await interaction.followup.send(f"ðŸ“ **è¨˜äº‹ãƒ¬ãƒ“ãƒ¥ãƒ¼çµæžœ**\n\n{review_result[:1900]}...")
            
            # Send remaining parts
            remaining = review_result[1900:]
            while remaining:
                chunk = remaining[:1900]
                remaining = remaining[1900:]
                await interaction.channel.send(chunk)
        else:
            await interaction.followup.send(f"ðŸ“ **è¨˜äº‹ãƒ¬ãƒ“ãƒ¥ãƒ¼çµæžœ**\n\n{review_result}")
        
        logger.info("âœ“ Article review completed")
        
    except Exception as e:
        logger.error(f"âœ— Error in blog_review: {e}", exc_info=True)
        await interaction.followup.send(f"âŒ ãƒ¬ãƒ“ãƒ¥ãƒ¼ä¸­ã«ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ: {str(e)}")


@bot.tree.command(name="blog_tags", description="è¨˜äº‹ã«ã‚¿ã‚°ã‚’è‡ªå‹•ä»˜ä¸Žï¼ˆå³åº§ã«å®Ÿè¡Œï¼‰")
async def blog_tags(interaction: discord.Interaction):
    """
    ã‚¿ã‚°ãŒä»˜ã„ã¦ã„ãªã„è¨˜äº‹ã«è‡ªå‹•ã§ã‚¿ã‚°ã‚’ä»˜ä¸Žã™ã‚‹
    """
    await interaction.response.defer(thinking=True)
    
    try:
        logger.info(f"Manual tag assignment requested by {interaction.user.name}")
        
        hatena_api = HatenaBlogAPI(
            hatena_id=config.hatena_id,
            blog_id=config.hatena_blog_id,
            api_key=config.hatena_api_key
        )
        
        await interaction.followup.send("ðŸ” è¨˜äº‹ã‚’å–å¾—ä¸­...")
        
        # Get all entries
        all_entries = []
        page = None
        
        while True:
            result = hatena_api.get_entries(page)
            if not result['success']:
                await interaction.channel.send(f"âŒ è¨˜äº‹ã®å–å¾—ã«å¤±æ•—: {result.get('error', 'Unknown')}")
                return
            
            all_entries.extend(result['entries'])
            page = result.get('next_page')
            
            if not page:
                break
        
        await interaction.channel.send(f"âœ“ {len(all_entries)}ä»¶ã®è¨˜äº‹ã‚’å–å¾—ã—ã¾ã—ãŸ")
        
        # Filter entries without tags
        entries_without_tags = [e for e in all_entries if not e['categories']]
        
        if not entries_without_tags:
            await interaction.channel.send("âœ¨ å…¨ã¦ã®è¨˜äº‹ã«ã‚¿ã‚°ãŒä»˜ä¸Žã•ã‚Œã¦ã„ã¾ã™ï¼")
            return
        
        await interaction.channel.send(f"ðŸ“‹ ã‚¿ã‚°ãªã—è¨˜äº‹: {len(entries_without_tags)}ä»¶\nè‡ªå‹•ã‚¿ã‚°ä»˜ä¸Žã‚’é–‹å§‹ã—ã¾ã™...")
        
        success_count = 0
        fail_count = 0
        
        for entry in entries_without_tags:
            try:
                # Get full article content
                article_data = hatena_api.get_article_content(entry['edit_url'])
                
                if not article_data['success']:
                    logger.warning(f"Failed to get content for: {entry['title']}")
                    fail_count += 1
                    continue
                
                # Generate tags using AI
                tags = ai_suggester.generate_tags_from_content(
                    title=article_data['title'],
                    content=article_data['content']
                )
                
                if not tags:
                    logger.warning(f"No tags generated for: {entry['title']}")
                    fail_count += 1
                    continue
                
                # Update article with tags
                update_result = hatena_api.update_article_categories(
                    edit_url=entry['edit_url'],
                    title=article_data['title'],
                    content=article_data['content'],
                    categories=tags,
                    draft=article_data['is_draft']
                )
                
                if update_result['success']:
                    logger.info(f"âœ“ Tags added to: {entry['title']} -> {tags}")
                    success_count += 1
                    await interaction.channel.send(f"âœ… **{entry['title']}**\nã‚¿ã‚°: {', '.join(tags)}")
                else:
                    fail_count += 1
                    logger.error(f"Failed to update: {entry['title']}")
                
                # Rate limiting: wait a bit between requests
                await asyncio.sleep(2)
                
            except Exception as e:
                logger.error(f"Error processing {entry.get('title', 'Unknown')}: {e}")
                fail_count += 1
        
        # Send summary
        summary = f"""
ðŸ“Š **ã‚¿ã‚°ä»˜ä¸Žå®Œäº†**

âœ… æˆåŠŸ: {success_count}ä»¶
âŒ å¤±æ•—: {fail_count}ä»¶
ðŸ“ åˆè¨ˆ: {len(entries_without_tags)}ä»¶
"""
        await interaction.channel.send(summary)
        logger.info(f"Tag assignment completed: {success_count} success, {fail_count} failed")
        
    except Exception as e:
        logger.error(f"âœ— Error in blog_tags: {e}", exc_info=True)
        await interaction.followup.send(f"âŒ ã‚¿ã‚°ä»˜ä¸Žä¸­ã«ã‚¨ãƒ©ãƒ¼ãŒç™ºç”Ÿã—ã¾ã—ãŸ: {str(e)}")


# Background task: Auto-tag articles once per day
@tasks.loop(hours=24)
async def auto_tag_articles():
    """
    1æ—¥ã«1åº¦ã€ã‚¿ã‚°ãŒä»˜ã„ã¦ã„ãªã„è¨˜äº‹ã«è‡ªå‹•ã§ã‚¿ã‚°ã‚’ä»˜ä¸Ž
    """
    try:
        logger.info("Starting automatic tag assignment...")
        
        hatena_api = HatenaBlogAPI(
            hatena_id=config.hatena_id,
            blog_id=config.hatena_blog_id,
            api_key=config.hatena_api_key
        )
        
        # Get all entries
        all_entries = []
        page = None
        
        while True:
            result = hatena_api.get_entries(page)
            if not result['success']:
                logger.error(f"Failed to get entries: {result.get('error')}")
                return
            
            all_entries.extend(result['entries'])
            page = result.get('next_page')
            
            if not page:
                break
        
        # Filter entries without tags
        entries_without_tags = [e for e in all_entries if not e['categories']]
        
        if not entries_without_tags:
            logger.info("No articles need tags")
            return
        
        logger.info(f"Found {len(entries_without_tags)} articles without tags")
        
        success_count = 0
        
        for entry in entries_without_tags:
            try:
                # Get full article content
                article_data = hatena_api.get_article_content(entry['edit_url'])
                
                if not article_data['success']:
                    continue
                
                # Generate tags using AI
                tags = ai_suggester.generate_tags_from_content(
                    title=article_data['title'],
                    content=article_data['content']
                )
                
                if not tags:
                    continue
                
                # Update article with tags
                update_result = hatena_api.update_article_categories(
                    edit_url=entry['edit_url'],
                    title=article_data['title'],
                    content=article_data['content'],
                    categories=tags,
                    draft=article_data['is_draft']
                )
                
                if update_result['success']:
                    logger.info(f"âœ“ Auto-tagged: {entry['title']} -> {tags}")
                    success_count += 1
                
                # Rate limiting
                await asyncio.sleep(3)
                
            except Exception as e:
                logger.error(f"Error auto-tagging {entry.get('title')}: {e}")
        
        logger.info(f"Auto-tag completed: {success_count} articles tagged")
        
    except Exception as e:
        logger.error(f"Error in auto_tag_articles: {e}", exc_info=True)


@auto_tag_articles.before_loop
async def before_auto_tag():
    """Wait until bot is ready before starting auto-tag task"""
    await bot.wait_until_ready()
    logger.info("Auto-tag task initialized (runs every 24 hours)")


        bot.run(config.discord_bot_token)
    except Exception as e:
        logger.error(f"Failed to start bot: {e}")
        raise


def main():
    """Start the bot"""
    try:
        logger.info("Starting RSS Checker Bot...")

if __name__ == "__main__":
    main()
